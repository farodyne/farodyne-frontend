{
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"],
    "compilerOptions": {
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "isolatedModules": true,
        "lib": ["ESNext", "DOM"],
        "module": "ESNext",
        "moduleResolution": "Node",
        "noEmit": true,
        "paths": { "@/*": ["./src/*"] },
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ESNext",
        "useDefineForClassFields": true
    }
}
